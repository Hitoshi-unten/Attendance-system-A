<% provide(:title, 'Base-Index') %>
<% provide(:button_text, '編集') %>

<h1>拠点一覧</h1>

<table class="table table-bordered table-condensed user-table">
  <tr>
    <td></td>
    <td></td>
    <td>拠点番号</td>
    <td>拠点名</td>
    <td>勤怠種類</td>
  </tr>
  
  <% @bases.each do |base| %>
    <tr>
      <td>
        <%= link_to "修正", edit_basis_path(base), class: "btn btn-primary" %>
      </td>
      <td>
        <%= link_to "削除", basis_path(base), method: :delete, class: "btn btn-primary", data: {confirm: "削除してよろしいですか？" } %>
      </td>
      <td><%= base.base_id %></td>
      <td><%= base.name %></td>
      <td><%= base.attendance %></td>
    </tr>
  <% end %>
</table>

<%= link_to "拠点情報追加", new_basis_path, remote: :true, class: "btn btn-lg btn-primary" %>

<!--モーダルウインドウ表示-->
<div id="new-basis" class="modal fade" tabindex="-1" role="dialog" aria-hidden="true"></div>

