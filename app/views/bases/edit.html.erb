<% provide(:title, "Edit") %>
<% provide(:class_text, 'base--edit') %>
<% provide(:button_text, '更新') %>
<h1>拠点情報の更新</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_with(model: @base, local: true) do |f| %>

      <%= render 'shared/error_messages', object: @base %>
  
      <%= f.label :base_id, class: "label-#{yield(:class_text)}" %>
      <%= f.text_field :base_id, class: "form-control" %>
                        
      <%= f.label :name, class: "label-#{yield(:class_text)}" %>
      <%= f.text_field :name, class: "form-control" %>
  
      <%= f.label :attendance, class: "label-#{yield(:class_text)}" %>
      <%= f.text_field :attendance, class: "form-control" %>
      <%= f.submit yield(:button_text), class: "btn btn-primary btn-block btn-#{yield(:class_text)}" %>
    <% end %>
  </div>
</div>