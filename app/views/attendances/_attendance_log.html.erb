<div class="modal-dialog modal-lg modal-dialog-center">
  <div class="modal-content">
    <div class="modal-header">
      <button type="button" class="close" data-dismiss="modal" aria-label="Close">
        <span aria-hidden="true">&times;</span>
      </button>
      <h1 class="modal-title">勤怠ログ</h1>
      <div class="modal-body">
        <%= form_with(url: attendance_log_user_path remote: true, method: :get) do |f| %>
        <!--フォームを追加するのにRailsではform_withというヘルパーメソッドを使う。このメソッドはActive Recordのオブジェクトを取り込み、さらにそのオブジェクトの属性（カラム）を使ってフォームを自動的に構築してくれる便利なもの。-->
          <%= f.date_select :worked_on, { use_month_numbers: true, discard_day: true, prompt:["年","月"]}, { class: "form-control" } %>
          <%= f.submit "検索", class: "btn-btn-md btn-primary" %>
        <% end %>
        <table class="table table-bordered table-striped overwork-application__table">
          <thead>
            <tr>
              <th>日付</th>
              <th>変更前出社時間</th>
              <th>変更前退社時間</th>
              <th>変更後出社時間</th>
              <th>変更後退社時間</th>
              <th>指示者</th>
              <th>承認日</th>
            </tr>
          </thead>
          <% @attendances.each do |attendance| %>
            <% superior = User.find_by(employee_number: attendance.edit_superior_announcement) %>
            <tbody>
              <tr>
                <td><%= l(@attendance.worked_on, format: :short) %></td>
                <td><%= l(@attendance.started_at_before, format: :time) if attendance.started_at_before.present? %></td>
                <td><%= l(@attendance.finished_at_before, format: :time) if attendance.finished_at_before.present? %></td>
                <td><%= l(@attendance.started_at_edit, format: :time) if attendance.started_at_edit.present? %></td>
                <td><%= l(@attendance.finished_at_edit, format: :time) if attendance.started_at_edit.present? %></td>
                <td><%= superior.name %></td>
                <td><%= l(attendance.updated_at, format: :custom) if attendance.update_at.present? %></td>
              </tr>
            </tbody>
          <% end %>
        </table>
      </div>
    </div>
  </div>  
</div>